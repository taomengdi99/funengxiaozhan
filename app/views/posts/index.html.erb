<div class="col-md-12">
  <div class="post">
    <%= link_to("New Post",new_post_path,class:"btn btn-primary pull-right") %>
  </div>
  <br>
  <br>
  <table class="table table-hover">
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.content %></td>
      <td>
        <%= link_to("Delete",post_path(post),class:"btn btn-sm btn-default",
                      method: :delete, data:{confirm:"Are you sure?"}) %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
